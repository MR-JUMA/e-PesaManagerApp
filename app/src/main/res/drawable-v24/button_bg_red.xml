<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip"
                android:color="@color/red_500" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">

            <stroke android:width="1dip" android:color="@color/red_500" />

            <solid android:color="@color/red_500" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip"
                android:color="@color/red_500" />
            <solid android:color="@color/red_500"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>